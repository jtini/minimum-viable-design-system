{
    "source": [
        "properties/**/*.json"
    ],
    "platforms": {
        "scss": {
            "transformGroup": "scss/custom",
            "buildPath": "build/",
            "files": [
                {
                    "destination": "scss/_variables.scss",
                    "format": "scss/variables"
                }
            ]
        },
        "js-internal": {
            "transformGroup": "scss",
            "buildPath": "build/",
            "files": [
                {
                    "destination": "js-internal/variables-scss.js",
                    "format": "javascript/module"
                }
            ]
        }
    }
}